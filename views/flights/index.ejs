<%- include('../partials/header') %>

<h2>ALL FLIGHTS</h2>
<table>
	<thead>
		<tr>
			<th>Airline</th>
			<th>Airport</th>
			<th>Flight Number</th>
			<th>Departure Date</th>
		</tr>
	</thead>
	<tbody>
		<% flights.forEach(function(f) { %>
		<tr>
			<td><%= f.airline %></td>
			<td><%= f.airport %></td>
			<td><%= f.flightNo %></td>
			<td><%= f.departure %></td>
			<td><a href="/flights/<%= f._id %>">DETAILS</a></td>
		</tr>
		<% }); %>
	</tbody>
</table>


<%- include('../partials/footer') %>