<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
	<thead>
		<tr>
			<th>Airline</th>
			<th>Airport</th>
			<th>Flight</th>
			<th>Departure</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= flight.airline %></td>
			<td><%= flight.airport %></td>
			<td><%= flight.flightNo %></td>
			<td><%= flight.departure.toLocaleDateString()%></td>
		</tr>
	</tbody>
</table>
<h2>Arrival:</h2>
<% if (flight.destinations.length) { %>
<table>
	<thead>
		<tr>
			<th>Airport</th>
			<th>Date</th>
		</tr>
	</thead>
	<tbody>
		<% flight.destinations.forEach(function(d) { %>
		<tr>
			<td><%= d.airport %></td>
			<td><%= d.arrival.toLocaleDateString() %></td>
		</tr>
		<% }); %>
	</tbody>
</table>
<% } else { %>
<h5>No Destinations Yet</h5>
<% } %>

<h2>Add Destination</h2>
<form id="add-destination-form" action="/flights/<%= flight._id %>/destinations" method="POST">
	<label>Destination Airport:
		<select name="airport">
			<option value="AUS">AUS</option>
			<option value="DFW">DFW</option>
			<option value="DEN">DEN</option>
			<option value="LAX">LAX</option>
			<option value="SAN">SAN</option>
		</select>
		<!-- <input type="text" name="airport"> -->
	</label><br>
	<label>Arrival Date:
		<input type="datetime-local" name="arrival">
	</label><br>
	<input type="submit" value="Add Flight" id="button">
</form>


<%- include('../partials/footer') %>